<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_deep"
    tools:context=".Activity.ShoppingSuccessActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:gravity="center"
                android:background="@drawable/bg_ractangal_confirm_fail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/confirmImageId"
                    android:src="@drawable/success"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </ImageView>
                <TextView
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_below="@id/confirmImageId"
                    android:id="@+id/confrimMessgeId"
                    android:layout_width="match_parent"
                    android:text="@string/confirm_message"
                    android:layout_height="wrap_content">

                </TextView>

                <Button

                    android:layout_below="@+id/confrimMessgeId"
                    android:id="@+id/buttonShoppingSuccessToDashBoardId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_button_red"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </Button>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>