<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:elevation="3dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView

                    android:id="@+id/imageViewProductId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/watch">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvProductBrandId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/buttonItemDeleteId"
                        android:gravity="center_vertical"
                        android:text="Brand Name"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/buttonItemDeleteId"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_delete_outline_black">

                    </ImageView>


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvProductNameId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/countLayoutId"
                    android:layout_below="@+id/topLayout"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="116 Plus Smart Watc adfsad sfdsafasd fadfsh (COD)"
                    android:textSize="15sp"
                    android:textStyle="normal">

                </TextView>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/textColorSecondary"
                    android:layout_below="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_above="@+id/tvTaxStatusId"
                    android:id="@+id/countLayoutId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"

                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPlusId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_border"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/purple_200"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tvQuantityId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvMinusId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/bg_rounded_border"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/purple_200"
                        android:textSize="15sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/tvPriceId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="4"
                        android:gravity="end"
                        android:text="1*120=$120"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tvTaxStatusId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="end"
                    android:text="10% tax (excluded)"
                    android:textSize="13sp"
                    android:textStyle="italic" />

            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>
