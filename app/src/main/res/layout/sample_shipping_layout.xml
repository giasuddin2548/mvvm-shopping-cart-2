<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:background="@drawable/bg_rounded_border"
        android:gravity="center"
        android:id="@+id/sample_shipment_layoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Free shipping"
            android:id="@+id/textNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:layout_below="@+id/textNameId"
            android:text="Free shipping"
            android:id="@+id/textNameSubtitileId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/selectedCartId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
